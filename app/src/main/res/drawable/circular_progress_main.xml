<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#181B23"/>
        </shape>
    </item>
    <!-- Foreground arc (progress) -->
    <item>
        <rotate android:fromDegrees="270">
            <shape android:shape="oval">
                <stroke
                    android:width="22dp"
                    android:color="#7B61FF"/>
            </shape>
        </rotate>
    </item>
    <!-- Gradient overlay for arc -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="sweep"
                android:useLevel="false"
                android:startColor="#4B8AFF"
                android:centerColor="#7B61FF"
                android:endColor="#00E0FF"/>
            <size android:width="320dp" android:height="320dp"/>
        </shape>
    </item>
</layer-list> 