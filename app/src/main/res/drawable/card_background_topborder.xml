<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Card background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#232A36"/>
        </shape>
    </item>
    <!-- Top border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="100dp">
        <shape android:shape="rectangle">
            <size android:height="1dp"/>
            <solid android:color="#898989"/>
        </shape>
    </item>
</layer-list> 