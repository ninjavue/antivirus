<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="#1b58b1">

    <LinearLayout
        android:id="@+id/cleaner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:background="@drawable/bg_progress">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_arrow_right"
                    android:rotation="180"
                    android:contentDescription="@string/back"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    app:tint="#8C8A8A" />

               <TextView
                   android:id="@+id/tvTitle"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Tozalash"
                   android:textColor="#8C8A8A"
                   android:textSize="18sp"
                   android:textStyle="bold"/>
           </LinearLayout>
           <FrameLayout
               android:id="@+id/cleanerCircleContainer"
               android:layout_width="250dp"
               android:layout_height="250dp"
               android:layout_marginTop="22dp"
               android:layout_gravity="center_horizontal"
               android:clipChildren="false"
               android:clipToPadding="false">

               <uz.csec.antivirus.CleanerCircularProgressView
                   android:id="@+id/cleanerMainProgress"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center">
                   <TextView
                       android:id="@+id/tvCleanableSize"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="12.7"
                       android:textColor="@color/black"
                       android:textSize="38sp"
                       android:textStyle="bold"/>
                   <TextView
                       android:id="@+id/tvCleanableUnit"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="GB"
                       android:textColor="#7878B4"
                       android:textSize="18sp"
                       android:layout_marginTop="-8dp"/>
                   <TextView
                       android:id="@+id/tvCleanableDesc"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Tozalash"
                       android:textColor="@color/white"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"
                       android:clickable="true"
                       android:focusable="true"
                       android:background="@drawable/btn_clean_bg"
                       android:paddingHorizontal="12dp"
                       android:paddingVertical="5dp"
                       android:minWidth="80dp"
                       android:gravity="center"/>
               </LinearLayout>
           </FrameLayout>
       </LinearLayout>
        <!-- Bottom card -->
        <LinearLayout
            android:id="@+id/cleanerBottomCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_marginBottom="0dp"
            android:elevation="8dp"
            android:padding="16dp"
            android:layout_alignParentBottom="true">
            <View
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="#22FFFFFF"
                android:layout_marginBottom="16dp"/>



            <include layout="@layout/item_cleaner_list" android:id="@+id/item1" tools:replace="android:id"/>
            <include layout="@layout/item_cleaner_list" android:id="@+id/item2" tools:replace="android:id"/>
            <include layout="@layout/item_cleaner_list" android:id="@+id/item3" tools:replace="android:id"/>
            <include layout="@layout/item_cleaner_list" android:id="@+id/item4" tools:replace="android:id"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scanning..."
        android:layout_below="@+id/cleaner"
        android:textColor="@color/white"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        />

</RelativeLayout>